# =============================================================================
# CONFIGURAÇÃO DO AMBIENTE - RECOLOCA.AI RAG SYSTEM
# =============================================================================
# Copie este arquivo para .env e ajuste os valores conforme necessário

# =============================================================================
# CONFIGURAÇÕES DE LOGGING
# =============================================================================
RAG_LOG_LEVEL=INFO
RAG_LOG_ENABLE_CONSOLE=true
RAG_LOG_ENABLE_FILE=true
RAG_LOG_MAX_FILE_SIZE=10485760
RAG_LOG_BACKUP_COUNT=5
RAG_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
RAG_LOG_DATE_FORMAT="%Y-%m-%d %H:%M:%S"

# =============================================================================
# CONFIGURAÇÕES DO MODELO DE EMBEDDING
# =============================================================================
RAG_EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
RAG_EMBEDDING_DEVICE=cuda
RAG_EMBEDDING_MAX_LENGTH=512
RAG_EMBEDDING_BATCH_SIZE=32
RAG_EMBEDDING_NORMALIZE_EMBEDDINGS=true
RAG_EMBEDDING_CACHE_SIZE=1000
RAG_EMBEDDING_ENABLE_GPU_MEMORY_FRACTION=0.8

# =============================================================================
# CONFIGURAÇÕES FAISS
# =============================================================================
RAG_FAISS_INDEX_TYPE=IndexFlatIP
RAG_FAISS_NPROBE=10
RAG_FAISS_ENABLE_GPU=false
RAG_FAISS_GPU_DEVICE=0
RAG_FAISS_MEMORY_LIMIT=2147483648

# =============================================================================
# CONFIGURAÇÕES PYTORCH
# =============================================================================
RAG_PYTORCH_DEVICE=cuda
RAG_PYTORCH_ENABLE_MIXED_PRECISION=true
RAG_PYTORCH_ENABLE_COMPILE=false
RAG_PYTORCH_MEMORY_FRACTION=0.8
RAG_PYTORCH_ENABLE_FLASH_ATTENTION=false
RAG_PYTORCH_BATCH_SIZE=16
RAG_PYTORCH_MAX_WORKERS=4

# =============================================================================
# CONFIGURAÇÕES GERAIS DO RAG
# =============================================================================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_RESULTS=10
RAG_SIMILARITY_THRESHOLD=0.7
RAG_FORCE_PYTORCH=false
RAG_USE_OPTIMIZATIONS=true
RAG_ENABLE_CACHING=true
RAG_CACHE_SIZE=500
RAG_ENABLE_METRICS=true

# =============================================================================
# CONFIGURAÇÕES DE PERFORMANCE (RTX 2060m)
# =============================================================================
# Configurações específicas para RTX 2060m (6GB VRAM)
RAG_GPU_MEMORY_LIMIT=5368709120
RAG_ENABLE_GRADIENT_CHECKPOINTING=true
RAG_ENABLE_CPU_OFFLOAD=true
RAG_MAX_CONCURRENT_REQUESTS=4

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================
RAG_DEBUG_MODE=false
RAG_ENABLE_PROFILING=false
RAG_PROFILE_OUTPUT_DIR=./profiles
RAG_ENABLE_MEMORY_MONITORING=true

# =============================================================================
# CONFIGURAÇÕES DE DIRETÓRIOS
# =============================================================================
# Deixe em branco para usar os padrões do projeto
RAG_DATA_DIR=
RAG_LOGS_DIR=
RAG_REPORTS_DIR=
RAG_INDEX_DIR=
RAG_SOURCE_DOCS_DIR=

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================
RAG_ENABLE_RATE_LIMITING=true
RAG_MAX_REQUESTS_PER_MINUTE=60
RAG_ENABLE_INPUT_VALIDATION=true
RAG_MAX_QUERY_LENGTH=1000

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================
RAG_ENABLE_HEALTH_CHECKS=true
RAG_HEALTH_CHECK_INTERVAL=30
RAG_ENABLE_PERFORMANCE_METRICS=true
RAG_METRICS_EXPORT_INTERVAL=60