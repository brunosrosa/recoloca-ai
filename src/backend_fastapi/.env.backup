# Configurações da Aplicação
APP_NAME=Recoloca.AI API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Segurança
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS e Hosts Permitidos
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Banco de Dados Supabase (substitua pelos valores reais)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Sistema RAG
RAG_ENABLED=true
RAG_TIMEOUT_SECONDS=30
RAG_CACHE_TTL_SECONDS=3600
RAG_MAX_RESULTS=10
RAG_MIN_SCORE=0.3

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# APIs Externas
OPENROUTER_API_KEY=your-openrouter-key-here
GEMINI_API_KEY=your-gemini-key-here

# Stripe
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# Monitoramento
SENTRY_DSN=
METRICS_ENABLED=false

# Desenvolvimento
RELOAD=true
DETAILED_ERRORS=true